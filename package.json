{
	"name": "component-library",
	"version": "0.0.1",
	"description": "React-based UI library of commonly used components following atomic design concepts.",
	"main": "./lib/index.js",
	"browser": "./lib/index.js",
	"module": "./lib/index.js",
	"scripts": {
		"test": "jest",
		"test:watch": "jest --watch",
		"dev": "start-storybook -c .storybook -s ./ -p 9001",
		"build": "rm -rf ./lib && BABEL_ENV=lib babel ./components --out-dir ./lib  --source-maps --copy-files",
		"lint": "xo",
		"static": "BABEL_ENV=test build-storybook -c .storybook -o ./build-storybook"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JoeBiggica/component-library.git"
	},
	"keywords": [],
	"author": "Reuters Creative Engineering Team",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/JoeBiggica/component-library/issues"
	},
	"homepage": "https://github.com/JoeBiggica/component-library#readme",
	"dependencies": {},
	"peerDependencies": {
		"react": "^16.8.0",
		"react-dom": "^16.8.0"
	},
	"devDependencies": {
		"@babel/cli": "7.4.3",
		"@babel/core": "7.4.3",
		"@babel/plugin-proposal-export-default-from": "7.2.0",
		"@babel/preset-react": "7.0.0",
		"@egjs/hammerjs": "2.0.15",
		"@storybook/addon-a11y": "5.2.5",
		"@storybook/addon-actions": "5.2.5",
		"@storybook/addon-backgrounds": "5.2.5",
		"@storybook/addon-centered": "5.2.5",
		"@storybook/addon-knobs": "5.2.5",
		"@storybook/react": "5.2.5",
		"@testing-library/jest-dom": "5.10.1",
		"@testing-library/react": "^10.2.0",
		"autoprefixer": "9.4.8",
		"babel-eslint": "10.0.1",
		"babel-jest": "^26.0.1",
		"babel-loader": "8.0.4",
		"babel-plugin-css-modules-transform": "1.6.2",
		"babel-plugin-inline-react-svg": "1.0.1",
		"babel-plugin-module-resolver": "3.1.1",
		"classnames": "2.2.6",
		"core-js": "^2.6.11",
		"css-loader": "2.1.1",
		"eslint-config-xo-react": "0.19.0",
		"eslint-plugin-jest": "^23.17.1",
		"eslint-plugin-react": "7.12.4",
		"eslint-plugin-react-hooks": "1.5.1",
		"husky": "^4.2.5",
		"identity-obj-proxy": "^3.0.0",
		"intersection-observer": "0.7.0",
		"jest": "^26.0.1",
		"lint-staged": "^10.2.11",
		"lodash-es": "4.17.15",
		"lodash-webpack-plugin": "0.11.5",
		"node-sass": "4.11.0",
		"postcss": "7.0.14",
		"prettier": "2.0.5",
		"prop-types": "15.6.2",
		"react-device-detect": "^1.13.1",
		"react-transition-group": "2.5.3",
		"resize-observer-polyfill": "1.5.1",
		"sass-loader": "7.1.0",
		"storybook-amp": "^1.0.11",
		"style-loader": "0.23.1",
		"webpack-cli": "3.3.0",
		"xo": "0.24.0",
		"xo-loader": "0.8.0"
	},
	"eslintConfig": {
		"extends": [
			"xo"
		]
	},
	"lint-staged": {
		"components/**/*.{js,jsx}": [
			"xo --fix",
			"git add"
		]
	},
	"xo": {
		"extends": [
			"xo-react",
			"plugin:jest/recommended"
		],
		"parser": "babel-eslint",
		"env": {
			"node": true,
			"es6": true,
			"browser": true
		},
		"globals": [
			"window",
			"document"
		],
		"filename": "",
		"rules": {
			"dot-notation": [
				"error",
				{
					"allowPattern": "^[A-Za-z0-9]+($|-|_|)+($|[A-Za-z0-9])+$"
				}
			],
			"properties": "never",
			"ignoreDestructuring": true,
			"camelcase": 0,
			"comma-dangle": 0,
			"no-multiple-empty-lines": 0,
			"no-multi-str": 0,
			"object-curly-spacing": 0,
			"no-warning-comments": 0,
			"capitalized-comments": 0,
			"spaced-comment": 0,
			"quote-props": 0,
			"unicorn/regex-shorthand": 0,
			"padded-blocks": 0,
			"padding-line-between-statements": 0,
			"valid-jsdoc": 0,
			"max-params": 0,
			"new-cap": 0,
			"radix": 0,
			"no-prototype-builtins": 0,
			"no-return-assign": 0,
			"no-unused-vars": 1,
			"no-trailing-spaces": 0,
			"no-negated-condition": 0,
			"no-mixed-operators": 0,
			"lines-between-class-members": 0,
			"unicorn/explicit-length-check": 0,
			"unicorn/no-console-spaces": 0,
			"unicorn/prefer-add-event-listener": 0,
			"unicorn/no-process-exit": 1,
			"unicorn/import-index": 0,
			"prefer-destructuring": 0,
			"guard-for-in": 0,
			"space-unary-ops": 0,
			"space-infix-ops": 0,
			"unicorn/filename-case": 0,
			"import/order": 0,
			"import/no-unassigned-import": 0,
			"import/no-unresolved": 0,
			"import/no-extraneous-dependencies": 0,
			"import/extensions": 0,
			"jsx-quotes": [
				2,
				"prefer-single"
			],
			"react/no-danger": 0,
			"react/no-array-index-key": 0,
			"react/jsx-no-target-blank": 0,
			"react/jsx-tag-spacing": 0,
			"react/jsx-no-bind": 0,
			"react/self-closing-comp": "warning",
			"react/react-in-jsx-scope": 0,
			"react/require-default-props": 0,
			"react/no-unused-prop-types": "warning",
			"react/no-access-state-in-setstate": 0,
			"react/jsx-fragments": 0,
			"react/jsx-sort-props": 0,
			"max-len": 1
		}
	}
}
